<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projectshuru"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.projectshuru.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.projectshuru.SettingsActivity"
            android:label="@string/title_activity_settings" >
            <intent-filter>
                <action android:name="com.example.projectshuru.SettingsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.projectshuru.ContactsActivity"
            android:label="@string/title_activity_contacts" >
            <intent-filter>
                <action android:name="com.example.projectshuru.ContactsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service android:name="com.example.projectshuru.MyService" />

        <activity
            android:name="com.example.projectshuru.SettextActivity"
            android:label="@string/title_activity_settext" >
            <intent-filter>
                <action android:name="com.example.projectshuru.SettextActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.projectshuru.MyselfActivity"
            android:label="@string/title_activity_myself" >
            <intent-filter>
                <action android:name="com.example.projectshuru.MyselfActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
       
        <activity
            android:name="com.example.projectshuru.HelpActivity"
            android:label="@string/title_activity_help" >
             <intent-filter>
                <action android:name="com.example.projectshuru.HelpActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
